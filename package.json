{
  "private": true,
  "workspaces": [
    "packages/*",
    "desktop",
    "website"
  ],
  "scripts": {
    "build:core": "npm run build --workspace=@concilium/core",
    "build:cli": "npm run build --workspace=@concilium/cli",
    "build": "npm run build:core && npm run build:cli",
    "test": "npm run test --workspaces --if-present",
    "publish:core": "npm publish --workspace=@concilium/core --access public",
    "publish:cli": "npm publish --workspace=@concilium/cli --access public",
    "publish:all": "npm run publish:core && npm run publish:cli"
  }
}
