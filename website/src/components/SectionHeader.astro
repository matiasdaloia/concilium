---
interface Props {
  title: string;
  subtitle: string;
  id?: string;
  num?: string;
}

const { title, subtitle, id, num = '00' } = Astro.props;
---

<div class="mb-12 flex flex-col gap-2" id={id}>
  <div class="flex items-center gap-2 mb-1">
     <span class="text-green-primary text-[10px] font-mono font-bold tracking-widest">{num}</span>
     <div class="h-px w-8 bg-green-primary/30"></div>
     <span class="text-green-primary text-[10px] font-mono font-bold tracking-widest uppercase">{subtitle}</span>
  </div>
  <h2 class="text-2xl md:text-4xl font-bold tracking-tight text-text-primary uppercase">
    {title}
  </h2>
</div>
